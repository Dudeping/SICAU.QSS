@model User
@{
    ViewBag.Title = "个人信息";
}

@Html.Partial("_PartialModal")
@Html.Partial("_PartialTitle")
@section LoadCss{
    <link type="text/css" href="/css/user.css?5c0a13bdc04791999455" rel="stylesheet">
}
@section LoadJs{
    <script type="text/javascript" src="/js/user.js?5c0a13bdc04791999455"></script>
}

<div class="tab-content">
    <div class="tab-pane fade active in" id="personalInfoPanel">
        <div class="panel-container">
            <div class="container">

                <div class="info-panel">
                    <p>账号：<span class="account">@Model.Account</span></p>
                    <p>姓名：<span class="author">@Model.Name</span></p>
                    <p>校区：<span>@Model.Campus</span></p>
                    <p>学院：<span>@Model.College</span></p>
                    <p>专业：<span>@Model.Major</span></p>
                    <p>班级：<span>@Model.Class</span></p>
                    <p>
                        电话：
                        <span id="phoneNum">@Model.Tel</span>
                        <a class="icon" data-target="phoneNum" data-type="text" id="phoneNumChange" data-toggle="false">修改</a>
                    </p>
                    <p>
                        邮箱：
                        <span id="email">@Model.Email</span>
                        <a target="_blank" href="/Account/RegisterEmail">修改</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>