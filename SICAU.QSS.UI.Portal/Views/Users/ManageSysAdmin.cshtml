@model IEnumerable<SysAdminModel>
@{
    ViewBag.Title = "系统管理";
}

@Html.Partial("_PartialModal")
@Html.Partial("_PartialTitle")
@section LoadCss{
    <link type="text/css" href="/css/user.css?5c0a13bdc04791999455" rel="stylesheet">
}
@section LoadJs{
    <script type="text/javascript" src="/js/user.js?5c0a13bdc04791999455"></script>
}

<div class="tab-content">
    <div class="tab-pane fade active in" id="sysManagePanel">
        <div class="filter-wrapper">
            <div class="container">
                <ul class="pager filter">
                    <li> <a data-toggle="modal" data-target="#managerCreateModal" id="managerAdd">添加管理员</a> </li>
                    <li> <a href="/Users/Logs">系统日志</a> </li>
                </ul>
            </div>
        </div>
        <div class="panel-container">
            <div class="container">
                <table class="table table-hover">
                    <caption></caption>
                    <thead>
                        <tr>
                            <th>姓名</th>
                            <th>账号</th>
                            <th>电话</th>
                            <th>邮箱</th>
                            <th colspan="2">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-id="@item.Id">
                                <td>@item.Name</td>
                                <td>@item.Account</td>
                                <td>@item.Tel</td>
                                <td>@item.Email</td>
                                <td>
                                    <a class="managerDel">删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>