@model IPagedList<AuditManageModel>
@{
    ViewBag.Title = "审核管理";
}

@Html.Partial("_PartialModal")
@Html.Partial("_PartialTitle")
@section LoadCss{
    <link type="text/css" href="/css/user.css?5c0a13bdc04791999455" rel="stylesheet">
}
@section LoadJs{
    <script type="text/javascript" src="/js/user.js?5c0a13bdc04791999455"></script>
}

<div class="tab-content">
    <div class="tab-pane fade active in" id="reviewManagePanel">

        <div class="filter-wrapper">
            <div class="container">
                <ul class="pager filter">
                    <li>
                        <a class="fa-fade" href="/Users/AuditManage?type=audit">未审核</a>
                    </li>
                    <li>
                        <a href="/Users/AuditManage?type=confirm">未确认</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="panel-container">
            <div class="container">
                <table class="table table-hover">
                    <caption></caption>
                    <thead>
                        <tr>
                            <th>提交者</th>
                            <th>提交时间</th>
                            <th>状态</th>
                            <th>提交类型</th>
                            <th>提交内容</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-type="@(item.SubmitType == QssAuditSubmitType.ques?"ques" : item.SubmitType == QssAuditSubmitType.vote? "vote" : "org")" data-id="@item.Id">
                                <td class="title">@item.Author</td>
                                <td class="time">@item.SubmitTime.ToLongDateString()</td>
                                <td class="reviewStatus" data-type="@(item.IsInAudit && item.Auditor != User.Identity.Name ? "reviewing":"review")">@(item.IsInAudit ? $"管理员 {item.Auditor} 正在审核" : "未审核")</td>
                                <td>@(item.SubmitType == QssAuditSubmitType.ques ? "问卷" : item.SubmitType == QssAuditSubmitType.vote ? "投票" : "组织")</td>
                                <td><a data-toggle="modal" data-target="#myModal" class="review">查看</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="panel-wrapper-footer">
            @Html.PagedListPager(Model, page => Url.Action("AuditManage", new { page, type = "audit" }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
        </div>
    </div>
</div>