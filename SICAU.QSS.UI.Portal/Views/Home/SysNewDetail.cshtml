@model SysNews
@{
    ViewBag.Title = "公告详情";
    SysNewsFrontNext sysNewsFront = ViewBag.SysNewsFront as SysNewsFrontNext;
    SysNewsFrontNext sysNewsNext = ViewBag.SysNewsNext as SysNewsFrontNext;
}

@section LoadCss{
    <link type="text/css" href="/css/notices.css?5c0a13bdc04791999455" rel="stylesheet">
}
@section LoadJs{
    <script type="text/javascript" src="/js/notices.js?5c0a13bdc04791999455"></script>
}

<div class="container notice-panel">

    <div class="notice-list">
        <div class="box-header">
            <h4>@Model.Title</h4>
        </div>

        <p>@Model.Content</p>
        <p>
            <span class="box-footer-content time">@Model.CreateTime</span>
        </p>
    </div>

</div>
<div class="panel-wrapper-footer">
    <nav>
        <ul class="pager">
            <li>
                @if (sysNewsFront != null)
                {
                    <a href="/Home/SysNewDetail/@sysNewsFront.Id">@sysNewsFront.Title.GetFirst(5)</a>
                }
                else
                {
                    <a href="#">上一篇</a>
                }
            </li>
            <li>
                @if (sysNewsNext != null)
                {
                    <a href="/Home/SysNewDetail/@sysNewsNext.Id">@sysNewsNext.Title.GetFirst(5)</a>
                }
                else
                {
                    <a href="#">下一篇</a>
                }
            </li>
        </ul>
    </nav>
</div>
